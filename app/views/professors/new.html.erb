<!-- Validation failure messages -->
<% if @professor.errors.any? %>
  <% @professor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Professor</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_professor" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          Name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="Name" class="form-control" value="<%= @professor.first_name %>">
      </div>



      <button class="btn btn-success">
        Create Professor
      </button>
      or
      <a href="/professors">Cancel</a>
    </form>
  </div>
</div>
