<div class="page-header">
  <h1>
    Reviewers
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User ID</th>
        <th>User email</th>
        <th>Actions
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">User Profile</a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="btn-group btn-group-justified">
      <a href="/courses" class="btn btn-primary">
        Courses
      </a>
      <a href="/professors" class="btn btn-primary">
        Professors
      </a>
      <a href="/reviews" class="btn btn-primary" rel="nofollow">
        Reviews
      </a>
    </div>
  </div>
</div>
