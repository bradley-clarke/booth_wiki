<div class="page-header">
  <h1>
    Courses
    <a href="/courses/new" class="btn btn-lg btn-success">New Course</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Course Number</th>
        <th>
          # of Reviews
        </th>

        <th>Actions</th>
      </tr>

      <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.course_number %></td>
        <td>
          <%= course.reviews.count %>
        </td>

        <td>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">View Course Profile</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
