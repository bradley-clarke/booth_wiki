<div class="page-header">
  <h1>
    Reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Review</th>
        <th>Quarter taken</th>
        <th>User</th>
        <th>Course</th>
        <th>Professor</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review %></td>
        <td><%= review.quarter_taken %></td>
        <td><a href="/users/<%= review.user_id %>">
          <%= review.user.email %> <!--can change this to review.user.email if want to -->
        </a>
      </td>
        <td>
          <a href="/courses/<%= review.course_id %>">
            <%= review.course.title %>
          </a>
        </td>



        <td>
          <a href="/professors/<%= review.professor_id %>">
            <%= review.professor.first_name %>
          </a>
        </td>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
          <% if current_user.id == review.user_id %>
          <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
